<div class="row">
  <aside class="col-md-4">
    <section class="user-info row">
      <h1 class='col-xs-12'>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      
    <div class='col-xs-12' id="user-profile">
      <%= render 'follow_foloower_count' %>
      <%= render 'location' %>
      </div>
    </section>
  </aside>
  
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <% end %>
  </div>
</div>